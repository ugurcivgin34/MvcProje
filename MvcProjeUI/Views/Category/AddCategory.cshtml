
@{
    ViewBag.Title = "AddCategory";
}

<h2>Kategori Ekleme Sayfası</h2>

<form class="form-group" method="post">
    <input class="form-group" type="text" placeholder="Kategory Adı" name="CategoryName"/>
    <input class="form-group" type="text" placeholder="Kategory Açıklaması" name="CategoryDescription"/>
    <input class="form-group" type="text" placeholder="Kategory Durumu" name="CategoryStatus"/>
    <button class="btn btn-info">Ekle</button>

</form>


