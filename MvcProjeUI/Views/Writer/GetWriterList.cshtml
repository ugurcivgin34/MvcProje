@using EntityLayer.Concrete
@model List<Writer>
@{ ViewBag.Title = "GetWriterList";
   Layout = "~/Views/Shared/_Layout.cshtml"; }

<h2>Yazar Listesi</h2>


<table class="table table-hover">
    <tr>
        <td>Yazar Id</td>
        <td>Yazar Adı </td>
        <td>Yazar Soyadı</td>
        <td>Yazar Mail Adresi</td>
        <td>Yazar Şifresi</td>


    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>@item.WriterId</td>
    <td>@item.WriterName</td>
    <td>@item.WriterSurname</td>
    <td>@item.WriterEmail</td>
    <td>@item.WriterPassword</td>
</tr>}


</table>
<a href="/Writer/AddWriter">Yeni Yazar</a>